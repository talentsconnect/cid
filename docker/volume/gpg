# -*- mode: shell-script -*-

# Mount: /home/cid/.gnupg

cat > /var/tmp/gnupg.tar
install -o cid -g cid -m 700 -d /var/tmp/gnupg.import
trap 'rm -Rf /var/tmp/gnupg.*' EXIT

chown cid:cid /home/cid/.gnupg

su cid -c "
 tar xfC - /var/tmp/gnupg.import
" < /var/tmp/gnupg.tar

su cid -c "
 find /var/tmp/gnupg.import -type f  -type f -exec gpg --import '{}' ';'
"
