# -*- mode: shell-script -*-

# Volume: haproxy:/etc/haproxy

configdir='/etc/haproxy'

if [ ! -d ./haproxy ]; then
    echo "Cannot find haproxy configuration"
    exit 70
fi

{ tar cfC - ./haproxy . | tar xfC - "${configdir}"; }

find "${configdir}" -exec chown root:root '{}' ';'
find "${configdir}" -type d -exec chmod 755 '{}' ';'
find "${configdir}" -type f -exec chmod 644 '{}' ';'
