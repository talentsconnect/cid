#!/bin/sh

### admin_console -- Start the Admin Shell

# El Cid (https://github.com/michipili/cid)
# This file is part of El Cid
#
# Copyright © 2018 Michael Grünewald
#
# This file must be used under the terms of the MIT license.
# This source file is licensed as described in the file LICENSE, which
# you should have received as part of this distribution. The terms
# are also available at
# https://opensource.org/licenses/MIT

: ${TOPLEVELDIR:=$(git rev-parse --show-toplevel)}
: ${subrdir:=${TOPLEVELDIR}/subr}
: ${dockerimage:=cid/admin}
: ${admin_package:='cid'}
: ${admin_user:='root'}
: ${admin_backupdir:=${TOPLEVELDIR}/backup}
: ${admin_wwwdir:=/var/www}
: ${admin_tracdir:=/var/trac}
: ${admin_interaction:=confirm}

. "${subrdir}/stdlib.sh"
. "${subrdir}/config.sh"

admin_config()
{
    git config --file "${config_dir}/cid.conf" "$@"
}


admin_docker()
{
    docker run --rm\
           --user "${admin_user}"\
           --volume "cid-${config_project}-jenkins:/var/lib/jenkins"\
           --volume "cid-${config_project}-git:/var/git"\
           --volume "cid-${config_project}-trac:${admin_tracdir}"\
           --volume "cid-${config_project}-www:${admin_wwwdir}"\
           --volume "${admin_backupdir}:/opt/cid/var/backups"\
           --volume "${config_dir}:/opt/cid/var/config"\
           "$@"
}

admin_shell()
{
    admin_docker -it "${dockerimage}" bash -l
}

admin_devshell()
{
    admin_docker\
        --volume "${TOPLEVELDIR}:/opt/cid/var/src/cid"\
        -it "${dockerimage}" bash -l
}

admin_dump()
{
    admin_docker -it "${dockerimage}" cid_dump -p "${config_project}"
}

admin_restore()
{
    local dumpfile
    case "$1" in
        /*)
            dumpfile="$1"
            ;;
        *)
            dumpfile="$(pwd -P)/$1"
            ;;
    esac
    admin_docker\
        --volume "${dumpfile}:/var/backups/backup.txz"\
        -it "${dockerimage}" cid_restore '/var/backups/backup.txz'
}

admin_ls()
{
    docker volume ls --format '{{.Name}}'\
        | sed -n -e '/-trac$/{s/^cid-//;s/-trac$//;p;}'\
        | sort -u
}

admin_rm()
{
    case "${admin_interaction}" in
        confirm)
            confirm '%s: Remove data volumes for this project.' "${config_project}";;
        yes)
            : 'NOP'
            ;;
        no)
            failwith 'admin_rm: Interaction set to no, abort.'
            ;;
    esac
    docker volume ls --format '{{.Name}}'\
        | grep -F "cid-${config_project}"\
        | xargs docker volume rm
}

admin_create()
{
    local volume
    for volume in git jenkins trac www; do
        docker volume create "cid-${config_project}-${volume}"
    done
}

admin_jenkins()
{
    local version

    version=$(config 'jenkins.version')
    if [ -z "${version}" ]; then
        version="${config_dir%/}"
        version="${version##*/}"
    fi

    if [ -f "${config_dir}/Dockerfile" ]; then
        (
            cd "${TOPLEVELDIR}"
            docker build -t "${admin_package}/jenkins:${version}" -
        ) < "${config_dir}/Dockerfile"
    else
        failwith '%s: Dockerfile for specialised Jenkins image is missing.'
    fi
}



admin_configure()
{
    admin_docker -it "${dockerimage}" cid_configure -p "${config_project}"
}

admin_main()
{
    local OPTIND OPTION OPTARG

    subcommand='shell'
    OPTIND=1

    while getopts 'b:c:dhp:' OPTION; do
        case ${OPTION} in
            c)	config_dir="${OPTARG%/}";;
            p)	config_project="${OPTARG}";;
            b)	admin_backupdir="${OPTARG}";;
            d)	admin_subcommand='subshell';;
            h)	admin_usage; exit 0;;
            *)	failwith -x 64 'admin_console: %s: Unsupported option.' "${OPTION}";;
        esac
    done
    shift $(expr ${OPTIND} - 1)

    config_setup

    case "$1" in
        configure|create|dump|ls|restore|rm|jenkins)
            subcommand="$1"
            shift
            ;;
    esac

    admin_${subcommand} "$@"
}

admin_main "$@"

### End of file `admin_console'
