: ${TOPLEVELDIR:=$(git rev-parse --show-toplevel)}
: ${dockerdir:=${TOPLEVELDIR}/docker}
: ${package:=cid}
: ${packagedir:=/cid}
: ${prefix:=/usr/local}
: ${cachedir:=${prefix}/var/cache${packagedir}}

#
# Main
#

compose_project='local'

compose_jenkinsversion()
{
    docker images --format '{{.Repository}}:{{.Tag}}' |\
        awk -F ':'\
            -v project="${compose_project}" '
BEGIN {
 version = "latest"
}

$1 == "cid/jenkins" && $2 == project {
 version = $2
}

END {
 print version
}'
}

compose_main()
{
    local OPTIND OPTION OPTARG

    status=1
    OPTIND=1

    while getopts 'p:' OPTION; do
        case ${OPTION} in
            p)	compose_project="${OPTARG}";;
            *)	failwith -x 70 'docker_compose: %s: Unsupported option.' "${OPTION}";;
        esac
    done
    shift $(expr ${OPTIND} - 1)

    (
        cid_project="${compose_project}"
        cid_jenkinsversion="$(compose_jenkinsversion)"
        export cid_project
        export cid_jenkinsversion

        exec docker-compose\
             --file "${dockerdir}/compose/cid.yml"\
             --project-name "cid-${compose_project}"\
             "$@"
    )
}

compose_main "$@"

### End of file `docker_compose'
